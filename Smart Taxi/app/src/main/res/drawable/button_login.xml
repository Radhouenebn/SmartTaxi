<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#05caca" />
             <gradient  android:angle="-90"  android:startColor="#046c78" android:endColor="#4cf2f0"  />
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#03a5b7" />
             <solid  android:color="#049c9c"/>
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#029b9b" />
             <gradient  android:angle="-90"  android:startColor="#037a8f" android:endColor="#3ebbe9" />
         </shape>
     </item>
</selector>